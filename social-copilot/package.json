{
  "name": "social-copilot",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered social companion for chat applications",
  "scripts": {
    "dev": "pnpm -r --filter \"./packages/*\" --if-present dev",
    "build": "pnpm -r --filter \"./packages/*\" --if-present build",
    "build:extension": "pnpm --filter @social-copilot/browser-extension build",
    "build:extension:release": "SC_RELEASE=1 pnpm --filter @social-copilot/browser-extension build",
    "test": "pnpm -r --filter \"./packages/*\" --if-present test",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "pnpm -r --filter \"./packages/*\" --if-present typecheck",
    "ci:local": "node scripts/ci-local.mjs",
    "validate:release": "node scripts/validate-release.mjs",
    "package:extension": "node scripts/package-extension.mjs",
    "release:extension": "pnpm build:extension:release && pnpm validate:release && pnpm package:extension"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
